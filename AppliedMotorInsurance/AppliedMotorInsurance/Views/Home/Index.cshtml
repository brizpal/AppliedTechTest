@*model List<AppliedMotorInsurance.ViewModels.PolicyViewModel>*@
@model AppliedMotorInsurance.ViewModels.PolicyViewModel


@{
    ViewBag.Title = "Motor Insurance";
}

<div class="jumbotron">
    <h1>Motor Insurance Calculator</h1>
</div>

@using (Html.BeginForm("CalulatePremium", "Home", FormMethod.Post))
{
<table cellpadding="0" cellspacing="0">
    <tr>
        <th colspan="2" align="center">Driver Details</th>
    </tr>
    <tr>
        <td>Policy Start Date: </td>
        <td>
            @Html.TextBoxFor(model => model.policy.PolicyStartDate, new { type = "date" })
        </td>
    </tr>
    <tr>
        <td>Driver Name: </td>
        <td>
            @Html.TextBoxFor(m => m.driver.DriverName)
        </td>
    </tr>
    <tr>
        <td>Date of Birth: </td>
        <td>
            @Html.TextBoxFor(model => model.driver.DateOfBirth, new { type = "date" })
        </td>
    </tr>
    <tr>
        <td>Occupation: </td>
        <td>
            @Html.DropDownListFor(m => m.driver.DriverOccupation, new List<SelectListItem>
           { new SelectListItem{Text="Chauffeur", Value="Chauffeur"},new SelectListItem{Text="Accountant", Value="Accountant"},
             new SelectListItem{Text="Other", Value="Other"}}, "Please select")
        </td>
    </tr>
    @*<tr>
            <td>City: </td>
            <td>
                @Html.TextBoxFor(m => m.City)
            </td>
        </tr>*@
    <tr>
        <td></td>
        <td><input type="submit" value="Submit" /></td>
    </tr>
</table>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
